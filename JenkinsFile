pipeline {


  agent {
    node {
      // ** Set the node/agent our job should run on.
      label 'build_node'
    }
  }

  /**
   * ## PIPELINE
   */
  stages {

    /** ***************
      ** ## Build game package
      ** **************/
    stage("Build package") {
      
      steps {
         pwsh "npx run build"
      }
    }
    
    stage("Upload package to server") {
      
      steps {
        pwsh "zip -r /dist release.zip"
        pwsh "scp release.zip ${AWS_USER}@${AWS_LINK}:/home/ec2-user"
      }
    }

    /** ***************
      ** ## Deploy game package
      ** **************/
    stage("Deploy game package") {

      agent {
        node {
          // ** Set the node/agent our job should run on.
          label 'ecs_aws_instance'
        }
      }

      steps {
        sh "sudo unzip -o ${TAG}-${VERSION}.zip -d /var/www/html"
      }
    } 
  } 
}