pipeline {
  /** ***************
   ** CONFIGURE AGENT
   ** **************/
  agent {
    node {
      // ** Set the node/agent our job should run on.
      label 'ecs_aws_instance'
    }
  }

  /**
   * ## PIPELINE
   */
  stages {
    
    /** ***************
     ** ## CONFIG ENV
     * Here we will load the properties file. This injects the Key=Pair
     * as environment variables.
     ** **************/
    stage("Config ENV") {
      steps {
        sh "export \$(grep -v '^#' .properties | xargs -d '\n')"
        sh 'printenv | sort'
        sh '$REPO'
      }
    }  // end stage  

    /** ***************
      ** ## Build game package
      ** **************/
    stage("Retrieve game package") {
      steps {
        sh "wget ${env.REPO}/download/${env.RELEASE}/${env.TAG}-${env.VERSION}.zip"
        sh "unzip ${env.TAG}-${env.VERSION}.zip"
      }
    }  

    /** ***************
      ** ## Deploy game package
      ** **************/
    stage("Deploy game package") {
      steps {
        sh "cp -r ${env.TAG}-${env.VERSION} /var/www/html"
      }
    } 
  } 
}