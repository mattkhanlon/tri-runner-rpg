pipeline {
  /** ***************
   ** CONFIGURE AGENT
   ** **************/
  agent {
    node {
      // ** Set the node/agent our job should run on.
      label 'ecs_aws_instance'
    }
  }

  /**
   * ## PIPELINE
   */
  stages {
    
    /** ***************
     ** ## CONFIG ENV
     * Here we will load the properties file. This injects the Key=Pair
     * as environment variables.
     ** **************/
    stage("Config ENV") {
      steps {
        // ** Get the config file using the config ID and properties file
        configFileProvider([configFile(fileId: "${params.ConfigId}", variable: 'propertiesFile')]) {
          // ** Injects the properties file into the environment
          load "${propertiesFile}"
        }
      }
    }  // end stage

    /** ***************
      ** ## Build game package
      ** **************/
    stage("Install our dependencies") {
      steps {
          sh "npm install"
      }
    }  

    /** ***************
      ** ## Build game package
      ** **************/
    stage("Build game package") {
      steps {
          sh "npm run build"
      }
    }  

    /** ***************
      ** ## Build game package
      ** **************/
    stage("Deploy game package") {
      steps {
          sh "cp -r /dist /var/www/html"
      }
    } 
  } 
}